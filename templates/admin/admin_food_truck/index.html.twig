{% extends '/admin/base_admin.html.twig' %}

{% block title %}Hello AdminVilleController!{% endblock %}


{% block contenu %}

    <table class="table table-primary table-striped-columns">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Type cuisine</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for foodtruck in foodtrucks %}
            <tr>
                <td>{{ foodtruck.nom }}</td>
                <td>{{ foodtruck.typeCuisine }}</td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('app_admin_foodtruck_modifier', {'id': foodtruck.id}) }}">Modifier</a>
                    <a class="btn btn-danger" onclick="return confirm('Etes vous sur ?')" href="{{ path('app_admin_foodtruck_supprimer', {'id': foodtruck.id}) }}">Supprimer</a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_admin_foodtruck_ajouter') }}" class="btn btn-primary">Ajouter un foodtruck</a>
{% endblock %}
