{% extends '/admin/base_admin.html.twig' %}

{% block title %}Hello AdminVilleController!{% endblock %}


{% block contenu %}

    <table class="table table-primary table-striped-columns">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Code postal</th>
            <th scope="col">Superficie</th>
            <th scope="col">FoodTrucks</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for ville in villes %}

            <tr>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>{{ ville.superficie }}</td>
                <td>
                    {% for foodTruck in ville.foodTrucks %}
                        {{ foodTruck.nom }}
                        {% if not loop.last %}
                            ,
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('app_admin_ville_modifier', {'id': ville.id}) }}">Modifier</a>
                    <a class="btn btn-danger" onclick="return confirm('Etes vous sur ?')" href="{{ path('app_admin_ville_supprimer', {'id': ville.id}) }}">Supprimer</a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_admin_ville_ajouter') }}" class="btn btn-primary">Ajouter une ville</a>
{% endblock %}
