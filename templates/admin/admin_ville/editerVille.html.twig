{% extends '/admin/base_admin.html.twig' %}


{% block contenu%}


    <div class="container">
        <h1 class="mb-4">  {{  app.request.get('_route') == "app_admin_ville_ajouter" ? 'Ajouter' : 'Modifier'}} une ville</h1>
        {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.codePostal) }}
        {{ form_row(form.superficie) }}
        {{ form_row(form.foodTrucks) }}

        {%  if app.request.get('_route') == 'app_admin_ville_ajouter' %}
            <button class="btn btn-primary" type="submit">
                Ajouter

            </button>
        {% else %}
            <button class="btn btn-success" type="submit">Modifier</button>
        {% endif %}
        {{ form_end(form) }}
    </div>

{% endblock %}